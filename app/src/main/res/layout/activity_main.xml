        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdgeLength="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"

                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/contentTOP"
                    android:layout_width="170dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/basic"
                        android:padding="4dp"
                        android:text="TAP FOR INFORMATIONS"
                        android:textAlignment="center"
                        android:textColor="#6A9EF4"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/data2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:fontFamily="@font/cambay"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="2dp"
                        android:background="@drawable/dottedback"
                        android:text="0000 à§³"
                        android:textAlignment="center"
                        android:textColor="#FF5252"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="170dp"
                    android:orientation="vertical"
                    android:paddingLeft="1dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                 >

                    <TextView
                        android:id="@+id/tap"
                        android:layout_width="170dp"
                        android:layout_height="65dp"
                        android:drawableEnd="@drawable/ic_baseline_account_balance_wallet_24"
                        android:fontFamily="@font/doppio_one"
                        android:paddingHorizontal="4dp"
                        android:text="TAP FOR\nBALANCE"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="#FF6E40"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
